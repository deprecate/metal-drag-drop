{
  "name": "metal-drag-drop",
  "version": "2.0.1",
  "description": "Metal's drag and drop component.",
  "license": "BSD",
  "repository": "metal/metal-drag-drop",
  "engines": {
    "node": ">=0.12.0",
    "npm": ">=3.0.0"
  },
  "jsnext:main": "src/all/drag.js",
  "main": "lib/all/drag.js",
  "files": [
    "lib",
    "src/**/*.js",
    "test/**/*.js"
  ],
  "scripts": {
    "build": "npm run soy && webpack",
    "compile": "babel --presets env -d lib/ src/",
    "prepublish": "npm run soy && npm run compile",
    "soy": "metalsoy --soyDeps node_modules/metal*/src/**/*.soy",
    "test": "karma start",
    "test:saucelabs": "karma start karma-saucelabs.conf.js"
  },
  "keywords": [
    "drag",
    "drop",
    "metal"
  ],
  "dependencies": {
    "bootstrap": "^3.3.6",
    "metal": "^2.14.0",
    "metal-dom": "^2.14.0",
    "metal-events": "^2.14.0",
    "metal-position": "^2.0.0",
    "metal-state": "^2.14.0"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-node-env-inline": "^0.2.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "karma": "^1.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-sinon": "^1.0.5",
    "karma-webpack": "^2.0.5",
    "metal-tools-soy": "^4.2.6",
    "mocha": "^4.0.1",
    "sinon": "^4.1.2",
    "webpack": "^3.5.5"
  }
}
